{
  "name": "agenr",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "workspaces": [
    "packages/*",
    "console"
  ],
  "bin": {
    "agenr": "./bin/agenr"
  },
  "scripts": {
    "dev": "tsx --watch src/index.ts",
    "dev:local": "./scripts/dev.sh",
    "start": "tsx src/index.ts",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "seed:activity": "tsx src/scripts/seed-activity.ts",
    "test:mcp": "vitest run tests/integrations/mcp-tools.test.ts",
    "test:db": "vitest run tests/db/db-integration.test.ts",
    "build:mcp": "pnpm run --filter @agenr/mcp build",
    "agenr": "tsx src/cli.ts",
    "deploy:staging": "./scripts/deploy-staging.sh",
    "deploy:production": "./scripts/deploy-production.sh",
    "deploy:site": "./scripts/deploy-site.sh"
  },
  "dependencies": {
    "@agenr/sdk": "workspace:*",
    "@aws-sdk/client-kms": "^3.987.0",
    "@hono/node-server": "^1.19.9",
    "@libsql/client": "^0.17.0",
    "@mariozechner/pi-agent-core": "^0.52.9",
    "@mariozechner/pi-ai": "^0.52.9",
    "@sinclair/typebox": "^0.34.48",
    "hono": "^4.10.4",
    "typescript": "^5.9.2",
    "yaml": "^2.8.2",
    "zod": "^4.1.5"
  },
  "devDependencies": {
    "@types/node": "^25.2.3",
    "tsx": "^4.21.0",
    "vitest": "^4.0.18"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/agenr-ai/agenr.git"
  },
  "homepage": "https://agenr.ai"
}
